hosts    = {{ DBHOST }}:{{ DBPORT }}
user     = {{ DBUSER }}
password = {{ DBPASS }}
dbname   = {{ DBNAME }}

option_group = client

query = SELECT maildir FROM mailbox, alias_domain WHERE alias_domain.alias_domain = '%d' AND mailbox.username = CONCAT('%u', '@', alias_domain.target_domain) AND mailbox.active = TRUE AND alias_domain.active = TRUE
